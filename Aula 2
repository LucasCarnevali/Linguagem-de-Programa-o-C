#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int i=0; 
	int j=0;
	printf("Digite o primeiro número na tela: \n");
	scanf("%d",&i);
	printf("Digite o segundo número na tela: \n");
	scanf("%d",&j);
	printf("Resultado: %d \n",i+j);
	
	system ("pause");
}
